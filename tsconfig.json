{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "declaration": true,
    "declarationDir": "./@types",
    "sourceMap": false,
    "target": "es2015",
    "lib": ["ES2015"],
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ]
  },
  "includes": [
    "app.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}